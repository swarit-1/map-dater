# Map Dater Environment Configuration
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!

# =============================================================================
# ANTHROPIC API CONFIGURATION (Required for AI Visual Analysis)
# =============================================================================
# Get your API key from: https://console.anthropic.com
# Used by: src/visual_features/ai_analyzer.py
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Specify Claude model to use
# Options: claude-3-5-sonnet-20241022 (default), claude-3-opus-20240229, etc.
# CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Optional: Maximum tokens for AI responses
# Default: 4096
# CLAUDE_MAX_TOKENS=4096

# =============================================================================
# OCR CONFIGURATION (Optional)
# =============================================================================
# Path to Tesseract executable (if not in PATH)
# Windows example: C:\Program Files\Tesseract-OCR\tesseract.exe
# Linux/Mac: Usually auto-detected if installed via package manager
# TESSERACT_CMD=/path/to/tesseract

# OCR language (default: eng)
# For multiple languages: eng+fra+deu
# OCR_LANGUAGE=eng

# OCR confidence threshold (0.0 to 1.0, default: 0.3)
# Lower = more text detected but more false positives
# Higher = fewer detections but higher accuracy
# OCR_CONFIDENCE_THRESHOLD=0.3

# =============================================================================
# IMAGE PREPROCESSING (Optional)
# =============================================================================
# Enable image deskewing (default: true)
# PREPROCESSING_DESKEW=true

# Enable denoising (default: true)
# PREPROCESSING_DENOISE=true

# Enable contrast enhancement (default: true)
# PREPROCESSING_CONTRAST=true

# Enable binarization for difficult maps (default: false)
# Try this if OCR is missing text
# PREPROCESSING_BINARIZATION=false

# Image upscaling factor for better OCR (default: 1.0)
# Recommended: 1.5-2.0 for low-resolution maps
# Warning: Higher values increase processing time
# PREPROCESSING_UPSCALE=1.5

# =============================================================================
# OUTPUT CONFIGURATION (Optional)
# =============================================================================
# Directory for visualization outputs
# OUTPUT_DIR=data/output

# Enable verbose logging (default: false)
# VERBOSE=false

# Save preprocessed images automatically (default: false)
# SAVE_PREPROCESSED=false

# =============================================================================
# DEVELOPMENT SETTINGS (Optional)
# =============================================================================
# Enable debug mode for more detailed logs
# DEBUG=false

# API request timeout in seconds (default: 60)
# API_TIMEOUT=60

# =============================================================================
# NOTES
# =============================================================================
# - Only ANTHROPIC_API_KEY is required for full functionality
# - Without API key, OCR and entity recognition still work
# - AI visual analysis requires valid API key and internet connection
# - Free tier API keys have rate limits - see Anthropic documentation
